{
  "name": "filtercake.com",
  "version": "1.0.0",
  "description": "- [filtercake/filtercake.github.io - Travis CI](https://travis-ci.org/filtercake/filtercake.github.io) - [filtercake.com](http://www.filtercake.com/)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "ruby -v && gem install bundler && bundle install",

    "browsersync": "./node_modules/.bin/browser-sync start --config _browser-sync-rc.js",

    "postcss": "./node_modules/.bin/postcss --config _postcssrc.json",
    "postcss_watch": "./node_modules/.bin/nodemon --ignore _site/ --watch ./ -e 'scss' -x 'npm run postcss'",


    "css-to-site": "cp filtercake3.css _site/filtercake3.css",
    "css-to-site_watch": "./node_modules/.bin/nodemon --ignore _site/ --watch ./ -e 'css' -x 'npm run css-to-site'",


    "jekyll": "bundle exec jekyll build --config _jekyllrc.yml --incremental",
    "jekyll_watch": "./node_modules/.bin/nodemon --ignore _site/ --watch ./ -e 'html,md' -x 'npm run jekyll'",

    "start": "npm run postcss_watch & npm run jekyll_watch & npm run css-to-site_watch & npm run browsersync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filtercake/filtercake.github.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filtercake/filtercake.github.io/issues"
  },
  "homepage": "https://github.com/filtercake/filtercake.github.io#readme",
  "dependencies": {
    "autoprefixer": "^6.3.7",
    "browser-sync": "^2.13.0",
    "mdcss": "^1.5.2",
    "nodemon": "^1.9.2",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-import": "^8.1.2",
    "postcss-reporter": "^1.3.3"
  }
}
